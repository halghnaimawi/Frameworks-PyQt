   <string notr="true">/* Global styles */
                QMainWindow, QWidget {
                background-color: #f5f7fa;
                font-family: 'Segoe UI', Arial, sans-serif;
                font-size: 14px;
                }

                /* Left Menu */
                QWidget#leftMenu {
                background-color: #333333;
                color: #f5f5f5;
                border-right: 1px solid #444444;
                }
                QPushButton#projectsButton, QPushButton#peopleButton {
                background-color: #333333;
                color: #f5f5f5;
                border: none;
                padding: 15px 20px;
                text-align: left;
                font-size: 16px;
                font-weight: bold;
                }
                QPushButton#projectsButton:hover, QPushButton#peopleButton:hover {
                background-color: #444444;
                }
                QPushButton#projectsButton:pressed, QPushButton#peopleButton:pressed {
                background-color: #3498db;
                }
                QPushButton#addProjectButton, QPushButton#addPersonButton {
                background-color: #3498db;
                color: #ffffff;
                border: none;
                border-radius: 4px;
                padding: 3px;
                font-size: 14px;
                margin: 5px 5px;
                max-width: 20px;
                }
                QPushButton#addProjectButton:hover, QPushButton#addPersonButton:hover {
                background-color: #2980b9;
                }
                QPushButton#addProjectButton:pressed, QPushButton#addPersonButton:pressed {
                background-color: #1f618d;
                }

                /* Main Bar */
                QWidget#mainBar {
                background-color: #ffffff;
                border-bottom: 1px solid #e0e0e0;
                padding: 8px;
                }
                QPushButton#menuButton {
                background-color: transparent;
                border: none;
                font-size: 18px;
                padding: 8px;
                }
                QPushButton#menuButton:hover {
                background-color: #e0e0e0;
                border-radius: 4px;
                }
                QLineEdit#searchBox {
                background-color: #f5f5f5;
                border: 1px solid #dcdcdc;
                border-radius: 4px;
                padding: 8px;
                font-size: 14px;
                }
                QLineEdit#searchBox:focus {
                border: 1px solid #3498db;
                }

                /* Tabs */
                QTabWidget::pane {
                border: 1px solid #e0e0e0;
                background-color: #ffffff;
                border-radius: 4px;
                }
                QTabWidget::tab-bar {
                alignment: left;
                }
                QTabBar::tab {
                background-color: #f5f5f5;
                color: #333333;
                padding: 10px 20px;
                margin-right: 2px;
                border-top-left-radius: 4px;
                border-top-right-radius: 4px;
                }
                QTabBar::tab:selected {
                background-color: #ffffff;
                color: #3498db;
                border-bottom: 2px solid #3498db;
                }
                QTabBar::tab:hover {
                background-color: #e0e0e0;
                }

                /* Tables */
                QTableWidget {
                background-color: #ffffff;
                border: 1px solid #e0e0e0;
                border-radius: 4px;
                gridline-color: #e0e0e0;
                }
                QTableWidget::item {
                padding: 8px;
                }
                QTableWidget::item:selected {
                background-color: #3498db;
                color: #ffffff;
                }
                QTableWidget::item:hover {
                background-color: #e0e0e0;
                }
                QHeaderView::section {
                background-color: #f5f5f5;
                border: 1px solid #e0e0e0;
                padding: 8px;
                font-weight: bold;
                }

                /* Action Buttons */
                QPushButton#tasksAddButton, QPushButton#tasksUpdateButton, QPushButton#tasksDeleteButton, QPushButton#tasksExportButton,
                QPushButton#peopleAddButton, QPushButton#peopleUpdateButton, QPushButton#peopleDeleteButton,
