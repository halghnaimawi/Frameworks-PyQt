                padding: 8px 16px;
                font-size: 14px;
                margin: 5px;
                }
                QPushButton#tasksAddButton, QPushButton#peopleAddButton, QPushButton#milestonesAddButton {
                background-color: #2ecc71;
                }
                QPushButton#tasksDeleteButton, QPushButton#peopleDeleteButton, QPushButton#milestonesDeleteButton{
                background-color: #e74c3c;
                }
                QPushButton#tasksExportButton {
                background-color: #f1c40f;
                }
                QPushButton#tasksAddButton:hover, QPushButton#peopleAddButton:hover, QPushButton#milestonesAddButton:hover {
                background-color: #27ae60;
                }
                QPushButton#tasksUpdateButton:hover, QPushButton#peopleUpdateButton:hover, QPushButton#milestonesUpdateButton:hover{
                background-color: #2980b9;
                }
                QPushButton#tasksDeleteButton:hover, QPushButton#peopleDeleteButton:hover, QPushButton#milestonesDeleteButton:hover {
                background-color: #c0392b;
                }
                QPushButton#tasksExportButton:hover {
                background-color: #d4ac0d;
                }

                QPushButton#tasksAddButton:pressed, QPushButton#peopleAddButton:pressed, QPushButton#milestonesAddButton:pressed,
                QPushButton#tasksUpdateButton:pressed, QPushButton#peopleUpdateButton:pressed, QPushButton#milestonesUpdateButton:pressed,
                QPushButton#tasksDeleteButton:pressed, QPushButton#peopleDeleteButton:pressed, QPushButton#milestQPushButton#tasksExportButton:pressed {
                opacity: 0.8;
                }

                /* Filter Input */
                QLineEdit#filterBox {
                background-color: #f5f5f5;
                border: 1px solid #dcdcdc;
                border-radius: 4px;
                padding: 8px;
                font-size: 14px;
                margin: 5px;
                }
                QLineEdit#filterBox:focus {
                border: 1px solid #3498db;
                }

                /* Dialogs and Forms */
                QDialog {
                background-color: #ffffff;
                border: 1px solid #e0e0e0;
                border-radius: 8px;
                }
                QLineEdit, QComboBox, QDateEdit {
                background-color: #f5f5f5;
                border: 1px solid #dcdcdc;
                border-radius: 4px;
                padding: 8px;
                font-size: 14px;
                }
                QLineEdit:focus, QComboBox:focus, QDateEdit:focus {
                border: 1px solid #3498db;
                }
                QComboBox::drop-down {
                border: none;
                }
                QComboBox::down-arrow {
                image: url(:/icons/down_arrow.png); /* Replace with actual icon path */
                width: 12px;
                height: 12px;
                }
                QDialogButtonBox QPushButton {
                background-color: #3498db;
                color: #ffffff;
                border: none;
                border-radius: 4px;
                padding: 8px 16px;
                font-size: 14px;
                min-width: 80px;
                }
                QDialogButtonBox QPushButton:hover {
                background-color: #2980b9;
                }
                QDialogButtonBox QPushButton:pressed {
                background-color: #1f618d;
                }

                /* Calendar */
                QCalendarWidget {
                background-color: #ffffff;
                border: 1px solid #e0e0e0;
                border-radius: 4px;
                }
                QCalendarWidget QToolButton {
                background-color: #f5f5f5;
                border: none;
                padding: 8px;
                }
                QCalendarWidget QToolButton:hover {
                background-color: #e0e0e0;
                }
                QCalendarWidget QAbstractItemView {
                selection-background-color: #3498db;
                selection-color: #ffffff;
                }
                QCalendarWidget QWidget#qt_calendar_calendarview {
                background-color: #ffffff;
                }
